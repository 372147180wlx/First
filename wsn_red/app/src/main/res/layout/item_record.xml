<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/listview_41bg_normal">

    <ImageView
        android:id="@+id/iv_limit"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/image1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#000000"
            android:text="有缘千里来相会"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="价格:"
                android:textColor="#666666"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_limitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="市场价格:"
                android:textColor="#666666"
                android:textSize="14sp" />
            <TextView
                android:layout_marginLeft="2dp"
                android:id="@+id/tv_marketprice"
                android:layout_toRightOf="@id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="市场价格:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_limitPrice"
                android:textColor="#d90000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/tv_1"
                android:text="1111"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commentcount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="已有"
                android:textColor="#666666"
                android:textSize="16sp" />
            <TextView
                android:layout_toRightOf="@id/commentcount1"
                android:id="@+id/commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="  "
                android:textColor="#666666"
                android:textSize="16sp" />
            <TextView
                android:layout_toRightOf="@id/commentcount"
                android:id="@+id/commentcount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="人评价"
                android:textColor="#666666"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
