<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d90000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/head_back_selected"
            android:text="返回"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
<!--<LinearLayout
    android:layout_margin="15dp"
    android:layout_below="@id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >-->
    <RadioGroup
        android:layout_margin="15dp"
        android:layout_below="@id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <RadioButton
        android:button="@null"
        android:layout_height="35dp"
        android:checked="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="近一个月订单"
        android:gravity="center"
        android:textColor="@drawable/text_color"
        android:background="@drawable/selector_order1"/>
    <RadioButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:layout_height="35dp"
        android:text="一个月前订单"
        android:textColor="@drawable/text_color"
        android:background="@drawable/selector_order2"/>
    <RadioButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:layout_height="35dp"
        android:text="已取消订单"
        android:textColor="@drawable/text_color"
        android:background="@drawable/selector_order3"/>
<!--</LinearLayout>-->
    </RadioGroup>
</RelativeLayout>