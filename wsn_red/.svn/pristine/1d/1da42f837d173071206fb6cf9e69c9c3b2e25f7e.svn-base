<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_checkout_commontitle"
            style="@style/title_style"
            android:text="标题" />

        <Button
            android:id="@+id/btn_back_check"
            android:text="结算中心"
            style="@style/head_button" />
    </RelativeLayout>

    <TextView
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        style="@style/TitleText"
        android:text="送货时间" />

    <RelativeLayout
        android:layout_marginTop="20dip"
        android:background="@drawable/first_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_checkcommon_text1"
            android:text="工作日送货"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_paymode_iv1"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ok"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/middle_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_checkcommon_text2"
            android:text="工作日送货"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_paymode_iv2"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ok"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/last_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_checkcommon_text3"
            android:text="工作日送货"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_paymode_iv3"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ok"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
